<%% content_for :breadcrumb do %>
<ol class="breadcrumb">
  <li><a href="/admin"><i class="fa fa-dashboard"></i> Admin</a></li>
  <li class="active">
    <i class="fa fa-th"></i>
    <%%= t('activerecord.models.<%= model_name %>' , default: '<%= plural_table_name.capitalize %>', count: 2 )%>
  </li>
</ol>
<%% end %>

<!-- Default box -->
<div class="box">
  <div class="box-header box-header-default">
    <h3 class="box-title">
      <%%= link_to <%= controller_routing_path %>_path do %>
      <i class="fa fa-th"></i>
      <%%= t('activerecord.models.<%= model_name %>' , default: '<%= plural_table_name.capitalize %>', count: 2 )%>
      <%% end %>
    </h3>
    <div class="box-tools pull-right">
      <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
      <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
    </div>
  </div><!-- /.box-header -->

  <div class="box-toolbar">

    <div class="col-xs-12 col-sm-6 col-md-6">
      <%%= form_for :search, url: <%= controller_routing_path %>_path, html: {class: "form search"} do |f|%>
      <%%= f.hidden_field :sort , value: params[:sort] %>
      <div class="input-group">
        <%%= f.text_field :q,{class: "form-control", placeholder: "#{t("search", :default => "Search")}"} %>
        <span class="input-group-btn">
          <button type="submit" id="search-btn" class="btn btn-default">
            <i class="fa fa-search"></i>
          </button>
        </span>
      </div>
      <%% end%>
    </div>

    <div class="col-xs-12 col-sm-6 col-md-6 text-right">
      <%%= link_to new_<%= singular_controller_routing_path %>_path(@<%= singular_table_name %>) ,class: "btn btn-success btn-rounded" do %>
      <span class="glyphicon glyphicon-plus"></span>
      <%%= t("new", default: "New")%> <%%= t('activerecord.models.<%= model_name %>' , default: '<%= human_name %>', count: 1  )%>
      <%% end %>
    </div>
  </div>

  <div class="box-body">
    <div id="<%= plural_table_name %>" class="table-responsive no-padding"><%%= render "<%= plural_table_name %>" %></div>
  </div><!-- /.box-body -->
</div><!-- /.box -->